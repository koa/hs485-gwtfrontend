<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    /* Add CSS here. See the GWT docs on UI Binder for more details */
    .important {
    	font-weight: bold;
    }
  </ui:style>
  <g:SplitLayoutPanel width="1000" height="700">
    <g:west size="325.0">
      <g:VerticalPanel ui:field="addInputDeviceButton">
        <g:HorizontalPanel/>
        <g:Grid>
        	<g:row>
        		<g:customCell>
        			<g:ListBox visibleItemCount="1" ui:field="selectFloorListBox" />
        		</g:customCell>
        		<g:customCell>
        			<g:Button ui:field="addFloorButton">add Floor ...</g:Button>
        		</g:customCell>
        	</g:row>
        	<g:row>
            <g:cell>
            </g:cell>
        		<g:customCell>
        			<g:Button ui:field="removeFloorButton" text="remove current Floor" />
        		</g:customCell>
        	</g:row>
        	<g:row>
        		<g:cell></g:cell>
        		<g:customCell>
        			<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
        				<g:Button ui:field="incScaleButton">+</g:Button>
        				<g:Button ui:field="decScaleButton">-</g:Button>
        			</g:HorizontalPanel>
        		</g:customCell>
        	</g:row>
        	<g:row/>
        	<g:row>
        		<g:customCell>
        			<g:ListBox visibleItemCount="1" ui:field="selectFileListBox" />
        		</g:customCell>
        		<g:customCell>
        			<g:Button ui:field="addFileButton">add File ...</g:Button>
        		</g:customCell>
        	</g:row>
        	<g:row>
        		<g:customCell>
        			<g:Button ui:field="outputDeviceButton">add Outputdevice</g:Button>
        		</g:customCell>
        		<g:customCell>
        			<g:Button ui:field="inputDeviceButton">add Inputdevice</g:Button>
        		</g:customCell>
        	</g:row>
        </g:Grid>
      </g:VerticalPanel>
    </g:west>
    <g:center>
      <g:HTMLPanel ui:field="svgPanel"/>
    </g:center>
  </g:SplitLayoutPanel>
</ui:UiBinder> 