<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:p1="urn:import:ch.bergturbenthal.hs485.frontend.gwtfrontend.client.plan">
  <ui:style>
    
  </ui:style>
  <g:HTMLPanel>
    <g:DockLayoutPanel unit="EM" width="100%" height="100%">
      <g:center>
        <p1:FloorComposite ui:field="showFloorComposite" />
      </g:center>
      <g:west size="30">
        <g:VerticalPanel height="100%">
          <g:Cell height="100%">
            <g:ListBox visibleItemCount="5" ui:field="selectFloorList"
              height="100%" width="100%" />
          </g:Cell>
          <g:VerticalPanel>
          	<g:HorizontalPanel>
          		<g:Button ui:field="addInputDeviceButton">Add Inputdevice</g:Button>
          		<g:Button ui:field="addOutputDeviceButton">Add Outputdevice</g:Button>
          	</g:HorizontalPanel>
            <g:HorizontalPanel>
              <g:Button ui:field="addFloorButton">Add Floor</g:Button>
              <g:Button ui:field="removeFloorButton">Remove Floor</g:Button>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
              <g:Button ui:field="savePlanButton">Save Plan</g:Button>
              <g:Button ui:field="cancelButton">Cancel</g:Button>
            </g:HorizontalPanel>
          </g:VerticalPanel>
        </g:VerticalPanel>
      </g:west>
    </g:DockLayoutPanel>
  </g:HTMLPanel>
</ui:UiBinder> 