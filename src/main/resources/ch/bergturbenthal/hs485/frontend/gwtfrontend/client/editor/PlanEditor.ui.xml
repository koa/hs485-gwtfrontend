<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:p1="urn:import:ch.bergturbenthal.hs485.frontend.gwtfrontend.client.plan">
  <ui:style>
    
  </ui:style>
  <g:DockLayoutPanel unit="EX">
    <g:north size="3">
      <g:MenuBar>
        <g:MenuItem text="Plan">
          <g:MenuBar vertical="true">
            <g:MenuItem text="new" ui:field="newPlanItem" />
            <g:MenuItem text="open" ui:field="openPlanItem" />
            <g:MenuItem text="save" ui:field="savePlanItem" />
          </g:MenuBar>
        </g:MenuItem>
        <g:MenuItem text="Files">
          <g:MenuBar vertical="true">
            <g:MenuItem text="upload Files" ui:field="uploadFilesItem" />
            <g:MenuItem text="remove Files" />
          </g:MenuBar>
        </g:MenuItem>
      </g:MenuBar>
    </g:north>
    <g:center>
      <g:DockLayoutPanel unit="EM" height="100%">
        <g:center>
          <p1:FloorComposite ui:field="showFloorComposite" />
        </g:center>
        <g:west size="17.2">
          <g:VerticalSplitPanel height="100%">
            <g:VerticalPanel height="100%">
              <g:Label text="Floors" />
              <g:Cell height="100%">
              	<g:ListBox visibleItemCount="5" ui:field="selectFloorList"
                height="100%" width="100%" />
              </g:Cell>
              <g:HorizontalPanel>
                <g:Button ui:field="addInputDeviceButton">Add Inputdevice</g:Button>
                <g:Button ui:field="addOutputDeviceButton">Add Outputdevice</g:Button>
              </g:HorizontalPanel>
              <g:HorizontalPanel>
                <g:Button ui:field="addFloorButton">Add Floor</g:Button>
                <g:Button ui:field="removeFloorButton">Remove Floor</g:Button>
              </g:HorizontalPanel>
            </g:VerticalPanel>
            <g:DockPanel height="100%" horizontalAlignment="ALIGN_CENTER">
              <g:Dock direction="NORTH">
                <g:Label text="Connections" />
              </g:Dock>
              <g:Dock direction="CENTER" width="100%" height="100%">
                <g:ListBox visibleItemCount="5" ui:field="connectionsList"
                  width="100%" height="100%" />
              </g:Dock>
              <g:Dock direction="SOUTH">
                <g:HorizontalPanel>
                  <g:Button ui:field="addConnectionButton">Add Connection</g:Button>
                  <g:Button ui:field="removeConnectionButton">Remove Connection</g:Button>
                </g:HorizontalPanel>
              </g:Dock>
            </g:DockPanel>
          </g:VerticalSplitPanel>
        </g:west>
      </g:DockLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder> 